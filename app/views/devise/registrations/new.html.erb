<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class ="registration-form">
    <div class ="registration-second-form">
      <div class="registration-field">
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "r-form" %>
        </div>
      </div>

      <div class="registration-field">
        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(最低<%= @minimum_password_length %>文字)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "r-form" %>
        </div>
      </div>

      <div class="registration-field">
        <div class="field">
          <%= f.label :パスワード確認 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "r-form" %>
        </div>
      </div>

      <div class="registration-field">
        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, class: "r-form" %>
        </div>
      </div>

      <div class="registration-field">
        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :phone_number, class: "r-form" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "sign-up-bottom" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
