<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class ="registration-form">
    <div class ="registration-second-form">
      <div class="registration-field">
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "r-form" %>
        </div>
      </div>

      <div class="registration-field">
        <div class="field">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "new-password", class: "r-form" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "sign-up-bottom" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
